{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "types": ["node", "jest", "cypress", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "module": "ESNext",
    // Changed from Bundler to Node fix Cypress startup issue https://github.com/cypress-io/cypress/issues/26308
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/[lng]/global-error.js"
  ],
  "exclude": [
    "node_modules",
    "src/*.test.ts",
    "**/*.spec.ts",
    "cypress.config.ts"
  ]
}
